<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="team.bsru.apirat.apirat_app.CreateUserActivity"

    android:gravity="center_horizontal"
    android:background="@drawable/bgschool">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8df1e4e4"
        android:layout_centerHorizontal="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edStrCode"
                    android:layout_marginTop="20dp"
                    android:textColorHint="#efe6e6"
                    android:hint="Student code"
                    android:textColor="#deece2e2"
                    android:background="#71555664"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edBookCode"
                    android:layout_marginTop="20dp"
                    android:textColorHint="#efe6e6"
                    android:hint="Book Code"
                    android:textColor="#deece2e2"
                    android:background="#71555664"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edUser"
                    android:layout_marginTop="20dp"
                    android:textColorHint="#efe6e6"
                    android:hint="User Name"
                    android:textColor="#deece2e2"
                    android:background="#71555664"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edPass"
                    android:layout_marginTop="20dp"
                    android:textColorHint="#efe6e6"
                    android:hint="Password"
                    android:textColor="#deece2e2"
                    android:background="#71555664"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edConfpass"
                    android:layout_marginTop="20dp"
                    android:textColorHint="#efe6e6"
                    android:hint="Confirm password"
                    android:textColor="#deece2e2"
                    android:background="#71555664"
                    android:padding="10dp" />

                <Button
                    android:text="Create User"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createButton"
                    android:layout_marginTop="50dp"
                    android:background="#3bb4d0"
                    android:textColor="#cdffffff"
                    android:textStyle="normal|bold" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="Developed by BSRUTEAM 29 "
            android:layout_width="wrap_content"
            android:id="@+id/textView2"
            android:textColor="#efd3d9e1"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />
    </LinearLayout>
</RelativeLayout>
